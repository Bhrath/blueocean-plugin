{
	"compilerOptions": {
		"outDir": "build",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"jsx": "react",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"types": [
			"bluebird-global"
		],
		"lib": [
			"dom",
			"es2018"
		],
		"baseUrl": ".",
		"paths": {
			"@jenkins-cd/blueocean-core-js": ["../blueocean-core-js/src/js"]
		}
	},
	"exclude": [
		"target",
		"**/*.jsx"
	]
}
